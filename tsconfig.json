{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["WebWorker"],
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist/cjs"
  },
  "include": [
    "index.ts",
    "tests/**/*.ts"
  ]
}